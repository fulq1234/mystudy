<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.dao.crawlerRules.CrawlerRulesMapper">

    <select id="getCrawlerRulesById" resultType="cn.kgc.beans.CrawlerRules" >
        select
                id as id,
                ruleName as ruleName,
                isNeedProxy as isNeedProxy,
                description as description,
                status as status,
                creatdTime as creatdTime,
                updatedTime as updatedTime
        from crawler_rules
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getCrawlerRulesListByMap" resultType="cn.kgc.beans.CrawlerRules" parameterType="java.util.Map">
        select
            id as id,
            ruleName as ruleName,
            isNeedProxy as isNeedProxy,
            description as description,
            status as status,
            creatdTime as creatdTime,
            updatedTime as updatedTime
        from crawler_rules
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=-1">
                    and id=#{id}
                </if>
                <if test="ruleName != null and ruleName!=-1">
                    and ruleName=#{ruleName}
                </if>
                <if test="isNeedProxy != null and isNeedProxy!=-1">
                    and isNeedProxy=#{isNeedProxy}
                </if>
                <if test="status != null and status!=-1">
                    and status=#{status}
                </if>
                <if test="creatdTime != null and creatdTime!=-1">
                    and creatdTime=#{creatdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=-1">
                    and updatedTime=#{updatedTime}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getCrawlerRulesCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from crawler_rules
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=-1">
                and id=#{id}
            </if>
            <if test="ruleName != null and ruleName!=-1">
                and ruleName=#{ruleName}
            </if>
            <if test="isNeedProxy != null and isNeedProxy!=-1">
                and isNeedProxy=#{isNeedProxy}
            </if>
            <if test="description != null and description!=-1">
                and description=#{description}
            </if>
            <if test="status != null and status!=-1">
                and status=#{status}
            </if>
            <if test="creatdTime != null and creatdTime!=-1">
                and creatdTime=#{creatdTime}
            </if>
            <if test="updatedTime != null and updatedTime!=-1">
                and updatedTime=#{updatedTime}
            </if>
        </trim>
    </select>

    <insert id="insertCrawlerRules" parameterType="cn.kgc.beans.CrawlerRules">
        insert into crawler_rules(
                ruleName,
                isNeedProxy,
                description,
                status,
                creatdTime,
                updatedTime)
        values(
                 #{ruleName},
                 #{isNeedProxy},
                 #{description},
                 #{status},
                 #{creatdTime},
                #{updatedTime})
    </insert>

    <update id="updateCrawlerRules" parameterType="cn.kgc.beans.CrawlerRules">
        update crawler_rules
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="ruleName != null and ruleName!='-1'">
                ruleName=#{ruleName},
            </if>
            <if test="isNeedProxy != null and isNeedProxy!='-1'">
                isNeedProxy=#{isNeedProxy},
            </if>
            <if test="status != null and status!='-1'">
                status=#{status},
            </if>
            <if test="creatdTime != null and creatdTime!='-1'">
                creatdTime=#{creatdTime},
            </if>
            <if test="updatedTime != null and updatedTime!='-1'">
                updatedTime=#{updatedTime}
            </if>
        </trim>
    </update>

    <delete id="deleteCrawlerRulesById" parameterType="Long">
        delete from crawler_rules where id = #{id}
    </delete>

    <delete id="batchDeleteCrawlerRules" parameterType="java.util.Map">
        delete from crawler_rules where id in (
            <foreach collection="ids" item="id" separator=",">
              #{id}
            </foreach>
        )
    </delete>
</mapper>