<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.dao.systemDic.SystemDicMapper">

    <select id="getSystemDicById" resultType="cn.kgc.beans.SystemDic" >
        select
                id as id,
                parent as parent,
                name as name,
                dicKey as dicKey,
                dicValue as dicValue,
                createdTime as createdTime,
                updatedTime as updatedTime,
                status as status
        from system_dic
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getSystemDicListByMap" resultType="cn.kgc.beans.SystemDic" parameterType="java.util.Map">
        select
                id as id,
                parent as parent,
                name as name,
                dicKey as dicKey,
                dicValue as dicValue,
                createdTime as createdTime,
                updatedTime as updatedTime,
                status as status
        from system_dic
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=-1">
                    and id=#{id}
                </if>
                <if test="parent != null and parent!=-1">
                    and parent=#{parent}
                </if>
                <if test="name != null and name!='-1'">
                    and name=#{name}
                </if>
                <if test="dicKey != null and dicKey!='-1'">
                    and dicKey=#{dicKey}
                </if>
                <if test="dicValue != null and dicValue!='-1'">
                    and dicValue=#{dicValue}
                </if>
                <if test="status != null and status!=-1">
                    and status=#{status}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getSystemDicCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from system_dic
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=-1">
                and id=#{id}
            </if>
            <if test="parent != null and parent!=-1">
                and parent=#{parent}
            </if>
            <if test="name != null and name!='-1'">
                and name=#{name}
            </if>
            <if test="dicKey != null and dicKey!='-1'">
                and dicKey=#{dicKey}
            </if>
            <if test="dicValue != null and dicValue!='-1'">
                and dicValue=#{dicValue}
            </if>
            <if test="status != null and status!=-1">
                and status=#{status}
            </if>
        </trim>
    </select>

    <insert id="insertSystemDic" parameterType="cn.kgc.beans.SystemDic">
        insert into system_dic(
                        parent,
                        name,
                        dicKey,
                        dicValue,
                        createdTime,
                        updatedTime,
                        status)
        values(
                     #{parent},
                     #{name},
                     #{dicKey},
                     #{dicValue},
                     #{createdTime},
                     #{updatedTime},
                    #{status})
    </insert>

    <update id="updateSystemDic" parameterType="cn.kgc.beans.SystemDic">
        update system_dic
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="parent != null and parent!='-1'">
                            parent=#{parent},
                        </if>
                        <if test="name != null and name!='-1'">
                            name=#{name},
                        </if>
                        <if test="dicKey != null and dicKey!='-1'">
                            dicKey=#{dicKey},
                        </if>
                        <if test="dicValue != null and dicValue!='-1'">
                            dicValue=#{dicValue},
                        </if>
                        <if test="createdTime != null and createdTime!='-1'">
                            createdTime=#{createdTime},
                        </if>
                        <if test="updatedTime != null and updatedTime!='-1'">
                            updatedTime=#{updatedTime},
                        </if>
                        <if test="status != null and status!='-1'">
                            status=#{status}
                        </if>
        </trim>
    </update>

    <delete id="deleteSystemDicById" parameterType="Long">
        delete from system_dic where id = #{id}
    </delete>

    <delete id="batchDeleteSystemDic" parameterType="java.util.Map">
        delete from system_dic where id in (
            <foreach collection="ids" item="id" separator=",">
                    #{id}
            </foreach>
        )
    </delete>
</mapper>