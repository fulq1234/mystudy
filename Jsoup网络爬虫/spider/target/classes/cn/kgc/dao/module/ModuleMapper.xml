<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.dao.module.ModuleMapper">

    <select id="getModuleById" resultType="cn.kgc.beans.Module" >
        select
                id as id,
                name as name,
                url as url,
                parent as parent,
                creatdTime as creatdTime,
                updatedTime as updatedTime,
                status as status
        from module
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getModuleListByMap" resultType="cn.kgc.beans.Module" parameterType="java.util.Map">
        select
                id as id,
                name as name,
                url as url,
                parent as parent,
                creatdTime as creatdTime,
                updatedTime as updatedTime,
                status as status
        from module
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=-1">
                    and id=#{id}
                </if>
                <if test="name != null and name!=-1">
                    and name=#{name}
                </if>
                <if test="url != null and url!=-1">
                    and url=#{url}
                </if>
                <if test="parent != null and parent!=-1">
                    and parent=#{parent}
                </if>
                <if test="creatdTime != null and creatdTime!=-1">
                    and creatdTime=#{creatdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=-1">
                    and updatedTime=#{updatedTime}
                </if>
                <if test="status != null and status!=-1">
                    and status=#{status}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getModuleCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from module
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=-1">
                and id=#{id}
            </if>
            <if test="name != null and name!=-1">
                and name=#{name}
            </if>
            <if test="url != null and url!=-1">
                and url=#{url}
            </if>
            <if test="parent != null and parent!=-1">
                and parent=#{parent}
            </if>
            <if test="creatdTime != null and creatdTime!=-1">
                and creatdTime=#{creatdTime}
            </if>
            <if test="updatedTime != null and updatedTime!=-1">
                and updatedTime=#{updatedTime}
            </if>
            <if test="status != null and status!=-1">
                and status=#{status}
            </if>
        </trim>
    </select>

    <insert id="insertModule" parameterType="cn.kgc.beans.Module">
        insert into module(
                        name,
                        url,
                        parent,
                        creatdTime,
                        updatedTime,
                        status)
        values(
                     #{name},
                     #{url},
                     #{parent},
                     #{creatdTime},
                     #{updatedTime},
                    #{status})
    </insert>

    <update id="updateModule" parameterType="cn.kgc.beans.Module">
        update module
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="name != null and name!='-1'">
                            name=#{name},
                        </if>
                        <if test="url != null and url!='-1'">
                            url=#{url},
                        </if>
                        <if test="parent != null and parent!='-1'">
                            parent=#{parent},
                        </if>
                        <if test="creatdTime != null and creatdTime!='-1'">
                            creatdTime=#{creatdTime},
                        </if>
                        <if test="updatedTime != null and updatedTime!='-1'">
                            updatedTime=#{updatedTime},
                        </if>
                        <if test="status != null and status!='-1'">
                            status=#{status}
                        </if>
        </trim>
    </update>

    <delete id="deleteModuleById" parameterType="Long">
        delete from module where id = #{id}
    </delete>

    <delete id="batchDeleteModule" parameterType="java.util.Map">
        delete from module where id in (
            <foreach collection="ids" item="id" separator=",">
                    #{id}
            </foreach>
        )
    </delete>
</mapper>